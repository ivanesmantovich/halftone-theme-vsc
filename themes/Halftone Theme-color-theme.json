  // semanticTokenColors OVERRIDE tokenColors
  "semanticHighlighting": true,

  "semanticTokenColors": {
    "function": "#000",
    "method": "#000",
    "class": "#000",
    "macro": "#000",

    "variable": "#000000",
    "keyword": "#000000",
    "string": "#000000",
    "regexp": "#000000",
    "operator": "#000000",
    "number": "#000000",
    "enumMember": "#000000",
    "decorator": "#000000",
    "parameter": "#000000",
    "typeParameter": "#000000",
    "property": "#000000",
    "event": "#000000",
    "label": "#000000",

    "struct": "#373737",
    "interface": "#373737",
    "type": "#373737",
    "namespace": "#373737",
    "enum": "#373737",

    "comment": "#D1D1D1"
  },

  "tokenColors": [
    // Variable
    {
      "scope": "variable",
      "settings": { "foreground": "#000000", "fontStyle": "" }
    },
    // Functions
    {
      "scope": "entity.name.function",
      "settings": { "foreground": "#000", "fontStyle": "bold" }
    },
    {
      "scope": "support.function",
      "settings": { "foreground": "#000", "fontStyle": "bold" }
    },
    // Method
    {
      "scope": "entity.name.method",
      "settings": { "foreground": "#000", "fontStyle": "bold" }
    },
    // Type
    {
      "scope": "entity.name.type",
      "settings": { "foreground": "#373737", "fontStyle": "underline" }
    },
    {
      "scope": "support.type",
      "settings": { "foreground": "#373737", "fontStyle": "underline" }
    },
    {
      "scope": "support.type.property-name.json",
      "settings": { "foreground": "#373737", "fontStyle": "italic" }
    },
    {
      "scope": "support.type.property-name.css",
      "settings": { "foreground": "#373737", "fontStyle": "italic" }
    },
    {
      "scope": "storage.modifier",
      "settings": { "foreground": "#000", "fontStyle": "italic" }
    },
    // HTML Tag
    {
      "scope": "entity.name.tag",
      "settings": { "foreground": "#000", "fontStyle": "bold" }
    },
    // HTML Tag Attibute name
    {
      "scope": "entity.other.attribute-name",
      "settings": { "foreground": "#373737" }
    },
    {
      "scope": "meta.property-name.css",
      "settings": { "foreground": "#000" }
    },
    // CSS Selectors (Classes, IDs)
    {
      "scope": "entity.other.attribute-name.class.css",
      "settings": { "foreground": "#000000", "fontStyle": "bold" }
    },
    {
      "scope": "entity.other.attribute-name.id.css",
      "settings": { "foreground": "#000000", "fontStyle": "bold" }
    },
    // function, const, let, ...
    {
      "scope": "storage.type",
      "settings": { "foreground": "#000000", "fontStyle": "italic" }
    },
    // Arrow
    {
      "scope": "storage.type.function.arrow",
      "settings": { "foreground": "#000000", "fontStyle": "bold" }
    },
    // return, for, break, ...
    {
      "scope": "keyword.control",
      "settings": { "foreground": "#000000", "fontStyle": "bold" }
    },
    // String
    {
      "scope": "string",
      "settings": { "foreground": "#5E5E5E", "fontStyle": "italic" }
    },
    // Comment
    {
      "scope": "comment",
      "settings": { "foreground": "#5E5E5E", "fontStyle": "italic" }
    }
  ]
}
