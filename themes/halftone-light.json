  // semanticTokenColors OVERRIDE tokenColors
  "semanticHighlighting": true,

  "semanticTokenColors": {
    "function": "#2a2a2a",
    "method": "#2a2a2a",
    "class": "#2a2a2a",
    "macro": "#2a2a2a",

    "variable": "#444",
    "keyword": "#444",
    "regexp": "#444",
    "operator": "#444",
    "enumMember": "#444",
    "decorator": "#444",
    "parameter": "#444",
    "typeParameter": "#444",
    "event": "#444",
    "label": "#444",

    "struct": "#444",
    "interface": "#444",
    "type": "#444",
    "namespace": "#444",
    "enum": "#444",
    "property": "#444",

    "number": "#5f5f5f",
    "string": "#5f5f5f",

    "comment": "#8b8b8b"
  },

  "tokenColors": [
    // Functions
    {
      "scope": "entity.name.function",
      "settings": { "foreground": "#2a2a2a", "fontStyle": "bold" }
    },
    {
      "scope": "support.function",
      "settings": { "foreground": "#2a2a2a", "fontStyle": "bold" }
    },
    // Method
    {
      "scope": "entity.name.method",
      "settings": { "foreground": "#2a2a2a", "fontStyle": "bold" }
    },
    // HTML Tag
    {
      "scope": "entity.name.tag",
      "settings": { "foreground": "#2a2a2a", "fontStyle": "bold" }
    },
    {
      "scope": "support.class.component.astro",
      "settings": {
        "foreground": "#2a2a2a",
        "fontStyle": "bold"
      }
    },
    // Variable
    {
      "scope": "variable",
      "settings": { "foreground": "#444", "fontStyle": "" }
    },
    // Type
    {
      "scope": "entity.name.type",
      "settings": { "foreground": "#444", "fontStyle": "underline" }
    },
    {
      "scope": "support.type",
      "settings": { "foreground": "#444", "fontStyle": "underline" }
    },
    {
      "scope": "storage.modifier",
      "settings": { "foreground": "#444", "fontStyle": "italic" }
    },
    // function, const, let, ...
    {
      "scope": "storage.type",
      "settings": { "foreground": "#444", "fontStyle": "italic" }
    },
    // Arrow
    {
      "scope": "storage.type.function.arrow",
      "settings": { "foreground": "#444", "fontStyle": "bold" }
    },
    // return, for, break, ...
    {
      "scope": "keyword.control",
      "settings": { "foreground": "#444", "fontStyle": "bold" }
    },
    {
      "scope": "meta.property-name.css",
      "settings": { "foreground": "#444" }
    },
    // CSS Selectors (Classes, IDs)
    {
      "scope": "entity.other.attribute-name.class.css",
      "settings": { "foreground": "#444", "fontStyle": "bold" }
    },
    {
      "scope": "entity.other.attribute-name.id.css",
      "settings": { "foreground": "#444", "fontStyle": "bold" }
    },
    // HTML Tag Attibute name
    {
      "scope": "entity.other.attribute-name",
      "settings": { "foreground": "#5f5f5f" }
    },
    {
      "scope": "support.type.property-name.json",
      "settings": { "foreground": "#5f5f5f", "fontStyle": "italic" }
    },
    {
      "scope": "support.type.property-name.css",
      "settings": { "foreground": "#5f5f5f", "fontStyle": "italic" }
    },
    // String
    {
      "scope": "string",
      "settings": { "foreground": "#5f5f5f", "fontStyle": "italic" }
    },
    // Numbers
    {
      "scope": "constant.numeric",
      "settings": { "foreground": "#5f5f5f" }
    },
    // Arrows
    {
      "scope": "storage.type.function.arrow",
      "settings": { "foreground": "#5f5f5f" }
    },
    // Brace
    {
      "scope": "meta.brace",
      "settings": { "foreground": "#7c7c7c" }
    },
    {
      "scope": "punctuation.definition",
      "settings": { "foreground": "#7c7c7c" }
    },
    {
      "scope": "punctuation.terminator.statement",
      "settings": { "foreground": "#7c7c7c" }
    },
    // Comment
    {
      "scope": "comment",
      "settings": { "foreground": "#8b8b8b", "fontStyle": "italic" }
    }
  ]
}
